<section id="shop-by-categories">
        <div class="container-fluid">
          <div class="section-title">
            <h2>Shop By Categories</h2>
          </div>
  
          <div class="row aos-init aos-animate" data-aos="zoom-in">
              <div class="col-lg-12 col-md-4 col-6 d-flex align-items-center justify-content-center" style="width:100%">
                 <div class="shop-by-category-items">
                   {% for block in section.blocks %}
                  <div class="item">
                    <img src="{{ block.settings.sbc_img | img_url:'medium' }}">
                    <p>{{ block.settings.heading }} <span>{{ block.settings.heading2 }}</span></p>
                  </div>
                   
                  {% endfor %}
              </div>
            </div>
          </div>
        </div></section>

{% schema %}
  {
      "name": "Shop By Category Section",
      
      "blocks": [
        {
          "type": "text",
          "name": "slide",
          "settings": [
          {
            "type": "image_picker",
            "id": "sbc_img",
            "label": "Ship Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Shiping heading"
          },

              {
            "type": "text",
            "id": "heading2",
            "label": "Shiping span"
          }
     
          ]
        }
      ],
      "presets": [
        {
          "name": "Shop By Category Section",
          "category": "text",
          "blocks": [
            {
              "type": "text"
            }
          ]
        }
      ]
    }

  
{% endschema %}

