{{ 'grid-section.css' | asset_url | stylesheet_tag }}

<section class="grid-section">
      <div class="container">
       
          {% for block in section.blocks %}
          <div class="d-flex row body_data">
              <div class="col-lg-3 col-6 col-img-1">
                <div><img src="{{ block.settings.image1 | img_url:'master' }}" alt=""></div>
                <div class="col-img-text text-center">
                  <span>{{ block.settings.text_span }}</span>
                 </div>
                 <div class="col-img-text-2 text-center">
                  <span>{{ block.settings.text_2_span }}</span>
                  <h5> {{ block.settings.text_2_h5 }}</h5>
                </div>
              </div>
              <div class="col-lg-3 col-6 col-img-1 ">
               <div> <img src="{{ block.settings.image2 | img_url:'master'}}" alt=""></div>
