                <div class="col-img-text-2 text-center">
                  <span>{{ block.settings.text_2_span_2 }}</span>
                  <h5> {{ block.settings.text_2_h5_2 }}</h5>
                </div>
                
              </div>
              <div class="col-lg-6 col-12 col-img-1 ">
                <div><img src="{{ block.settings.image3 | img_url:'master' }}" alt=""></div>
                <div class="col-img-text text-center">
                  <span>{{ block.settings.text_span_3 }}</span>
                </div>
                <div class="col-img-text-2 text-center">
                  <span>{{ block.settings.text_2_span_3 }}</span>
