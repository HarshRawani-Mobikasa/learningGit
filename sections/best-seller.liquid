<section id="best-seller">
          <div class="container-fluid">
            <div class="section-title">
              <h2>Bestseller products</h2>
            </div>
    
            <div class="row aos-init aos-animate" data-aos="zoom-in">
                <div class="col-lg-12 col-md-4 col-6 d-flex align-items-center justify-content-center" style="width:100%">
                   <div class="best-seller-items">
                     {% for block in section.blocks %}
                    <div class="item">
                      <img src="{{ block.settings.best_seller_img | img_url:'medium' }}">
                      <p>{{ block.settings.heading }}</p>
                        <span>{{ block.settings.heading2 }}</span>
                    </div>
                   {% endfor %}
                </div>
              </div>
            </div>
            <div class="viewAllBtn">
            <button>view all</button>
          </div>
          </div>
          </section>

{% schema %}
  {
      "name": "Best Seller Section",
      
      "blocks": [
        {
          "type": "text",
          "name": "slide",
          "settings": [
          {
            "type": "image_picker",
            "id": "best_seller_img",
            "label": "Best Seller Product Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Best Seller Product"
          },

              {
            "type": "text",
            "id": "heading2",
            "label": "Price & Discount"
          }
     
          ]
        }
      ],
      "presets": [
        {
          "name": "Best Seller",
          "category": "text",
          "blocks": [
            {
              "type": "text"
            }
          ]
        }
      ]
    }
{% endschema %}

