{{ 'footer-section.css' | asset_url | stylesheet_tag }}


<footer class="footer-part">

  <div class="container-fluid">
    <div class="row row-cols-{{ section.settings.col_num }} footer-list-image">
      {% for block in section.blocks %}
        {% assign item = block.settings %}
        {% if block.type == "link_list" %}
          <div class="list-categories p-0">
      <div class="col list-section">
        <h5>{{ item.title }}</h5>        
        {% assign footer_linklist= item.menu %}
          <ul class="text-small p-0 m-0">
            {% for link in linklists[footer_linklist].links %}
              <li class="footer-list p-0 m-0">
                <a href={{ link.url }}>{{ link.title | escape }}</a>
              </li>
                {% endfor %}
          </ul>
        
      </div>
            </div>
  
              {% elsif block.type =="text" %}
          <div class="col image-part">
            <img src="{{ item.logo | img_url: 'master' }}" alt="" class="mb-{{ section.settings.padding }}">
            <h5>{{ item.title  }}</h5>
            <p>{{ item.description }}</p>
                  <form action="" class="form-footers">
             
              <input type="email" class="input-text mt-4" placeholder="Enter Email" name="" id="">
              <i class="fa-solid fa-angle-right icon"></i>
            </form>
            
          </div>
      
          {% endif %}
      {% endfor %}
    </div>
      
         <div class="footer-bottom">
        <div class="footer-bottom-text text-center">
          <h6 class="m-0">Â© 2022 AmalaEarth.com. All Rights Reserved</h6>
        </div>
      </div>
    
  </div>

  
  
</footer>



{% schema %}
  {
    "name": "footer-section",
    "settings": [
      {
        "type":"range",
        "id":"col_num",
        "default":2,
        "min":2,
        "max":6,
        "label":"number of columns"
        
      },
      {
        "type":"range",
        "id":"padding",
        "default":5,
        "min":1,
        "max":5,
        "label":"padding option"
      }
    ],
    "blocks":[
      {
        "type":"link_list",
        "name":"footer_list",
        "settings":[
          {
            "type":"text",
            "id":"title",
            "label":"title",
            "default":"list title"
          },
          {
            "type":"link_list",
            "id":"menu",
            "label":"add menu"
          }
        ]
      },
          {
      "type":"text",
      "name":"store information",
      "settings":[
        {
          "type":"image_picker",
          "id":"logo",
          "label":"store logo"
        },
        {
          "type":"text",
          "id":"title",
          "label":"heading",
          "default":"store information"

        },
        {
          "type":"richtext",
          "id":"description",
          "label":"description" 
        }
      ]
    }
    ]
    
  }
{% endschema %}

