                <section id="imageContainer">
                    <div class="container-flud">
                     
                      <div class="aos-animate wrapper" data-aos="zoom-in">
                        {% for block in section.blocks %}
                          <div class="imageContainer" style="padding:0px 7px 13px 7px ">
                            <img src="{{ block.settings.contain_img | img_url:'medium' }}" style="height:320px; width:100%">
                            <div class="hovertext-container">
                              <p class="hovertext-p1">{{ block.settings.heading }}</p>
                              <p class="hovertext-p2">{{ block.settings.heading2 }}</p>
                           </div>
                          </div>
                          {% endfor %}
                         
                      </div> 

                       
                      </div>
                  </section>

