<section id="Reviews" class="Blogs">
  <div class="container-fluid">
    <div class="section-title">
      <h2> {{blog.title}}</h2>
    </div>
    <div class="row">
      <div class="col-lg-12 d-flex flex-column justify-content-center pt-lg-0 order-2 order-lg-1 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
        <div class="review-items">
          {%  for article in blog.articles %}
            <div style="border-radius:8px; padding-top:37px" class="item">
              <img src="{{ article.image.src | img_url: 'medium' }}" style="    height: 180px;
                display: block;
                text-align: center;
                margin: 0 auto;
            }">
              <span><img src="https://cdn.shopify.com/s/files/1/0619/0039/0599/files/star.png?v=1667191547"></span>
              <h3><a href="{{article.url}}">{{article.title}}</a></h3>
              <p style="font-size: 11px; color: #b3b3b3">{{article.created_at}}</p>
              <span style="    color: #28aba8;
                font-size: 13px;
                font-weight: bold" class="article__author">
                {{ article.author }}
                </span>
                <p style="font-size: 13px;
                  color: #8b8b8b;">{{article.content | truncatewords: 7 }}
                <a style="font-size: 11px;
                  font-style: italic;
                  font-weight: 600;" href="{{ article.url }}" aria-label="Read more: {{ article.title }}">
                  Read more
                </a></p>
                
                
                <!--<div class="previous_next_buttons">
                  <a href="{{ blog.previous_article }}" class="btn">
                    Previous post     
                  </a>
                  <a href="{{ blog.next_article }}" class="btn">
                    Next post   
                  </a>
                </div>-->
          <!--<a href="{{ article.url }}" aria-label="Read more: {{ article.title }}">
            Read more
          </a>-->
              <hr>
              <!--<h3><img src="//cdn.shopify.com/s/files/1/0619/0039/0599/files/review1_medium.png?v=1667191547"><span>Reviewer1</span></h3>-->
            </div>
          {% endfor %}
          {% render 'pagination'%}
        </div>
      </div>
    </div>
  </div>
</section>





