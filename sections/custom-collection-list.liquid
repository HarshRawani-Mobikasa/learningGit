 {% paginate collection.products by 2%}
 

 
    

    <section id="Reviews">
        <div class="container">
           <!--<h1>{{collection.title}}</h1>-->
          <div class="row">
            <div class="col-lg-12 d-flex flex-column justify-content-center pt-lg-0 order-2 order-lg-1 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
              <div class="review-items">
                {% for product in collection.products %}
                  <div class="item">
                    <h2> <a href="{{product.url | within: colection}}">
                        <img src="{{product.featured_image.src | img_url: 'medium'}}" alt="{{product.featured_mage.alt | escape}}">
                    </a></h2>
                    <span><img src="https://cdn.shopify.com/s/files/1/0619/0039/0599/files/star.png?v=1667191547"></span>
                    <p><a href="{{product.url | within: colection  }}">{{product.title | truncatewords: 6 }}</a>
                    
                    {% unless product.available %} <br><strong>sold out</strong>{% endunless %}</p>
                    <hr>
                    <div class="price" style="display:flex; justify-content: center">
                    <h3>{{product.price | money}}</h3>
                    
                 {% if product.compare_at_price_max > product.price %}
                        <span class="discount">Discount {{ product.compare_at_price_max | minus: product.price | times: 100.0 | divided_by: product.compare_at_price_max | money_without_currency | times: 100 | remove: '.0'}}%</span>
                {% endif %}
            </div>
                  </div>
                  {% if current_product.compare_at_price > current_product.price %}
                    <span class="price-sale" style="   
                      font-weight: normal;"><s>{{ current_product.compare_at_price | money }}</s></span>
                  {% endif %}
                 
                  {% else %}
                  <p>no matches</p>
              {% endfor%}
                  
                 
                
              </div>
               
            </div>
          </div>
        </div>
      </section>


    
 {% endpaginate %}
