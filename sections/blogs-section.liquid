{{ 'blogs-section.css' | asset_url | stylesheet_tag }}

<script src="{{ 'blogs-section.js' | asset_url }}" defer="defer"></script>


   <section class="blogs-section">
    <div class="container">
          <div class="categories-text mt-5 mb-5">
          <span > {{ section.settings.text_span }}
          </span>
          <h1 class="text-opacity">  {{ section.settings.text_h1  }}</h1>
        </div>
      <div class="blogs-img row">
     
          {%- for article in section.settings.blog.articles -%}
  
   <div class="ms-2 col">
          <img src="{{ article.image.src | img_url:'master' }}" alt="" class="img-fluid">
          <div class="blogs-img-text mt-3 px-5 ">  
            <h6 class="m-0">{{ article.published_at |time_tag: format: 'date'  }}</h6>
            <a href="{{ article.url }}" class="text-decoration-none"><p>{{ article.content  }}</p></a>
          </div>
         </div>
          {%- endfor -%}
      

      </div>
    </div>
   </section>





{% schema %}
  {
    "name": "blogs",
    "settings": [
            {
        "type":"text",
        "id":"text_span",
        "label":"behind_text"
      },
      {
        "type":"text",
        "id":"text_h1",
        "label":"above_text"
      },
      {
        "type":"blog",
        "id":"blog",
        "label":"harsh's blog"
      }
    ],
    "presets":[
      {
        "name":"blogs",
        "settings":{
          "blog":"Harsh's Blog"
        }
        
        
      }
    ]
  }
{% endschema %}

