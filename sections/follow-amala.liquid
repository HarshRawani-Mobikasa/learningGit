<section id="follow-amala">
        <div class="container-fluid">
          <div class="section-title">
            <h2>Follow @amalaearth</h2>
          </div>
          <div class="row">
            <div class="col-lg-12 d-flex flex-column justify-content-center pt-lg-0 order-2 order-lg-1 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
              <div class="follow-amala-items">
                {% for block in section.blocks %}
                <div class="item">
                  <img src="{{ block.settings.amala_img | img_url:'medium' }}">
                </div>
                  {% endfor %}
                
                </div>
                <div class="viewAllBtn">
                  <button>view all</button>
                </div>
              </div>
            </div>
          </div>
        
      </section>
      
{% schema %}
  {
      "name": "Amala Follow Section",
      
      "blocks": [
        {
          "type": "text",
          "name": "slide",
          "settings": [
          {
            "type": "image_picker",
            "id": "amala_img",
            "label": "Amala Follow Image"
          } 
     
          ]
        }
      ],
      "presets": [
        {
          "name": "Amala Follow section",
          "category": "text",
          "blocks": [
            {
              "type": "text"
            }
          ]
        }
      ]
    }
{% endschema %}

