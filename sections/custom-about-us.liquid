{% if section.settings.container == 'container' %}
  {% assign container-class = 'container' %}
{% else %}
{% assign container-class = 'container-fluid' %}
  {% endif %}
   
    <section>
      <div class="{{ container-class }} container">
<div class="row">
  
        <div class="col-lg-12 d-flex flex-column justify-content-center pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
         {% for block in section.blocks %}
          <h1> {{ block.settings.heading }}</h2>
          {% if section.settings.show_date %}}
          <small>{{page.published_at | date: '%B %d, %Y'}}</small>
          {% endif %}
          <div>{{block.settings.content}}</div>
           {% endfor %} 
      </div>
    </div> 
    
  </div>
    </section>
      
 

{% schema %}
{
  "name": "AboutUs Section",
  
  "blocks": [
    {
      "type": "text",
      "name": "slide",
      "settings": [
       
      {
        "type": "text",
        "id": "heading",
        "label": "Title"
      },

          {
        "type": "text",
        "id": "content",
        "label": "Content"
      },
        {
        "type": "select",
        "id": "container",
        "label": "Layout",
        "options": [
            {
            "value": "container",
            "label": "Container"
            },

            {
            "value": "container-fluid",
            "label": "Container Fluid"
            }
        ],
        "default": "container"
    },
        {
        "type": "checkbox",
        "id": "show_date",
        "default": true,
        "label": "Show Date"
        
    }
 
      ]
    }
  ],
  "presets": [
    {
      "name": "AboutUs Section",
      "category": "text",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}

