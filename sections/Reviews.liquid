<section id="Reviews">
        <div class="container-fluid">
          <div class="section-title">
            <h2>Reviews</h2>
          </div>
          <div class="row">
            <div class="col-lg-12 d-flex flex-column justify-content-center pt-lg-0 order-2 order-lg-1 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
              <div class="review-items">
                {% for block in section.blocks %}
                  <div class="item">
                    <h2><img src="https://cdn.shopify.com/s/files/1/0619/0039/0599/files/quotes.png?v=1667191547"></h2>
                    <span><img src="https://cdn.shopify.com/s/files/1/0619/0039/0599/files/star.png?v=1667191547"></span>
                    <p>{{ block.settings.heading }}</p>
                    <hr>
                    <h3><img src="{{ block.settings.reviewer_img | img_url:'medium' }}"><span>{{ block.settings.heading2 }}</span></h3>
                  </div>
                {% endfor %}
              </div>
              <div class="viewAllBtn">
                <button>view all</button>
              </div>
            </div>
          </div>
        </div>
      </section>

{% schema %}
   {
      "name": "Reviews Section",
      
      "blocks": [
        {
          "type": "text",
          "name": "slide",
          "settings": [
          {
            "type": "image_picker",
            "id": "reviewer_img",
            "label": "Reviewer Image"
          },
            
          {
            "type": "text",
            "id": "heading",
            "label": "Review Description"
          },

              {
            "type": "text",
            "id": "heading2",
            "label": "Reviewer Name"
          }
     
          ]
        }
      ],
      "presets": [
        {
          "name": "Reviews Section",
          "category": "text",
          "blocks": [
            {
              "type": "text"
            }
          ]
        }
      ]
    }
{% endschema %}

