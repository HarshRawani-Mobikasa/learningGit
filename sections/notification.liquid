 

 
    <section id="notification" >
      <div class="container-fluid">
        <div class="row" data-aos="zoom-in">
            <div class="col-lg-12 col-md-4 col-6 d-flex align-items-center justify-content-center notification-container">
              {% for block in section.blocks %}
               <div class="notification">
                  <span><img src="{{ block.settings.ship_img | img_url:'medium' }}"></span>
                  <p><span>{{ block.settings.heading }}</span> {{ block.settings.heading2 }}</p>
              </div>
              {% endfor %}
          </div>
        </div>
      </div>
    </section>
  

{% schema %}
  {
      "name": "Notification Section",
      
      "blocks": [
        {
          "type": "text",
          "name": "slide",
          "settings": [
          {
            "type": "image_picker",
            "id": "ship_img",
            "label": "Ship Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Shiping heading"
          },

              {
            "type": "text",
            "id": "heading2",
            "label": "Shiping span"
          }
     
          ]
        }
      ],
      "presets": [
        {
          "name": "Notification section",
          "category": "text",
          "blocks": [
            {
              "type": "text"
            }
          ]
        }
      ]
    }
{% endschema %}

